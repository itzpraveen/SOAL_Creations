---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Branding & Communication">
    <header class="hero">
        <div class="hero-bg"></div>
        <div class="hero-content">
            <h1>We craft brands that <span class="text-serif text-accent">resonate</span> in a noisy world.</h1>
            <p>A strategic branding and communication studio building the future of identity.</p>
        </div>
    </header>

    <section class="container manifesto">
        <div class="descriptor">
            <span>The Philosophy</span>
            <h2>Good design is good business. Great design is <span class="text-serif">timeless</span>.</h2>
        </div>
        <div class="stats-grid">
            <div class="stat">
                <h3>50+</h3>
                <p>Brands Launched</p>
            </div>
            <div class="stat">
                <h3>03</h3>
                <p>Global Awards</p>
            </div>
            <div class="stat">
                <h3>10y</h3>
                <p>Of Experience</p>
            </div>
            <div class="stat">
                <h3>24/7</h3>
                <p>Creative Mode</p>
            </div>
        </div>
    </section>

    <section class="container work-showcase">
        <h2>Selected Works</h2>
        <div class="project-list">
            
            <article class="project">
                <div class="project-img">
                    <img src="https://iggis.org/wp-content/themes/iggis/images/logo-big.png" alt="Indira Gandhi Group of Institutions logo" style="object-fit: contain; background:#0a0a0a; padding:2rem; border:1px solid rgba(255,255,255,0.08); border-radius:12px;">
                </div>
                <div class="project-info">
                    <span class="project-category">Education • Brand & Digital</span>
                    <h3 class="project-title">Indira Gandhi Group of Institutions</h3>
                    <p>Unified a multi-campus group with a cohesive identity and streamlined admissions experience. Modernized the visual system and content model for news, placements, and partner stories.</p>
                    <br>
                    <a href="/work" class="project-link">View Case Study</a>
                </div>
            </article>

            <article class="project">
                <div class="project-img">
                    <img src="/assets/work1.png" alt="Bella Bathwares">
                </div>
                <div class="project-info">
                    <span class="project-category">Home & Retail • Ecommerce</span>
                    <h3 class="project-title">Bella Bathwares</h3>
                    <p>Reimagined the digital flagship for premium bath fittings. Built modular product storytelling and performance-focused storefront flows that cut bounce on mobile.</p>
                    <br>
                    <a href="/work" class="project-link">View Case Study</a>
                </div>
            </article>

            <article class="project">
                <div class="project-img">
                    <img src="https://matteesfivestar.com/wp-content/uploads/2023/05/matteeslogo-1-2-1-1.png" alt="Mattees Five Star logo" style="object-fit: contain; background:#0a0a0a; padding:2rem; border:1px solid rgba(255,255,255,0.08); border-radius:12px;"> 
                </div>
                <div class="project-info">
                    <span class="project-category">FMCG • Packaging & Growth</span>
                    <h3 class="project-title">Mattees Five Star</h3>
                    <p>Created shelf-ready packaging and a recipe-led ecommerce experience for their Arabian spice line, boosting conversion and repeat purchase intent.</p>
                    <br>
                    <a href="/work" class="project-link">View Case Study</a>
                </div>
            </article>

        </div>
    </section>

    <section class="container services-list">
        <div class="descriptor" style="margin-bottom: 3rem;">
            <span>Expertise</span>
        </div>
        
        <div class="service-item">
            <span class="service-num">01</span>
            <h3 class="service-name">Brand Strategy</h3>
            <p class="service-desc">Defining the core truth of your business.</p>
        </div>
        <div class="service-item">
            <span class="service-num">02</span>
            <h3 class="service-name">Visual Identity</h3>
            <p class="service-desc">Logos, typography, color, and art direction.</p>
        </div>
        <div class="service-item">
            <span class="service-num">03</span>
            <h3 class="service-name">Digital Design</h3>
            <p class="service-desc">Websites, apps, and digital experiences.</p>
        </div>
        <div class="service-item">
            <span class="service-num">04</span>
            <h3 class="service-name">Communication</h3>
            <p class="service-desc">Copywriting, campaigns, and social media.</p>
        </div>
    </section>
</MainLayout>
