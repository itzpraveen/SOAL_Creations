---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Branding & Communication">
    <header class="hero">
        <div class="hero-bg"></div>
        <div class="hero-content">
            <h1>We craft brands that <span class="text-serif text-accent">resonate</span> in a noisy world.</h1>
            <p>A strategic branding and communication studio building the future of identity.</p>
        </div>
    </header>

    <section class="container manifesto">
        <div class="descriptor">
            <span>The Philosophy</span>
            <h2>Good design is good business. Great design is <span class="text-serif">timeless</span>.</h2>
        </div>
        <div class="stats-grid">
            <div class="stat">
                <h3>50+</h3>
                <p>Brands Launched</p>
            </div>
            <div class="stat">
                <h3>03</h3>
                <p>Global Awards</p>
            </div>
            <div class="stat">
                <h3>10y</h3>
                <p>Of Experience</p>
            </div>
            <div class="stat">
                <h3>24/7</h3>
                <p>Creative Mode</p>
            </div>
        </div>
    </section>

    <section class="container work-showcase">
        <h2>Selected Works</h2>
        <div class="project-list">
            
            <article class="project">
                <div class="project-img">
                    <img src="/assets/work1.png" alt="Aesop Skincare Branding">
                </div>
                <div class="project-info">
                    <span class="project-category">Packaging & Identity</span>
                    <h3 class="project-title">Lumeura Skincare</h3>
                    <p>Redefining luxury through minimalist packaging and tactile surfaces. A comprehensive rebrand for a heritage skincare line.</p>
                    <br>
                    <a href="/work" class="project-link">View Case Study</a>
                </div>
            </article>

            <article class="project">
                <div class="project-img">
                    <img src="/assets/work2.png" alt="Fintech App Interface">
                </div>
                <div class="project-info">
                    <span class="project-category">Digital Product</span>
                    <h3 class="project-title">Nova Finance</h3>
                    <p>Simplifying complex financial data into a clean, Swiss-inspired interface. user experience design for the next generation of banking.</p>
                    <br>
                    <a href="/work" class="project-link">View Case Study</a>
                </div>
            </article>

            <article class="project">
                <div class="project-img">
                    <img src="/assets/work1.png" alt="Corporate Branding"> 
                </div>
                <div class="project-info">
                    <span class="project-category">Corporate Identity</span>
                    <h3 class="project-title">Apex Architecture</h3>
                    <p>Constructing a visual language for a leading firm. Bold geometry meets classic typography.</p>
                    <br>
                    <a href="/work" class="project-link">View Case Study</a>
                </div>
            </article>

        </div>
    </section>

    <section class="container services-list">
        <div class="descriptor" style="margin-bottom: 3rem;">
            <span>Expertise</span>
        </div>
        
        <div class="service-item">
            <span class="service-num">01</span>
            <h3 class="service-name">Brand Strategy</h3>
            <p class="service-desc">Defining the core truth of your business.</p>
        </div>
        <div class="service-item">
            <span class="service-num">02</span>
            <h3 class="service-name">Visual Identity</h3>
            <p class="service-desc">Logos, typography, color, and art direction.</p>
        </div>
        <div class="service-item">
            <span class="service-num">03</span>
            <h3 class="service-name">Digital Design</h3>
            <p class="service-desc">Websites, apps, and digital experiences.</p>
        </div>
        <div class="service-item">
            <span class="service-num">04</span>
            <h3 class="service-name">Communication</h3>
            <p class="service-desc">Copywriting, campaigns, and social media.</p>
        </div>
    </section>
</MainLayout>
