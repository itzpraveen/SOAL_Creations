---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Expertise">
    <header class="hero" style="height: 50vh;">
        <div class="hero-content">
            <h1>Our Expertise</h1>
            <p>Comprehensive design solutions for modern business.</p>
        </div>
    </header>

    <section class="container services-list">
        <div class="service-item">
            <span class="service-num">01</span>
            <h3 class="service-name">Brand Strategy</h3>
            <p class="service-desc">We uncover the core truth of your business and articulate it into a compelling narrative that resonates.</p>
        </div>
        <div class="service-item">
            <span class="service-num">02</span>
            <h3 class="service-name">Visual Identity</h3>
            <p class="service-desc">Crafting distinct visual systems including logo design, typography, color palettes, and art direction.</p>
        </div>
        <div class="service-item">
            <span class="service-num">03</span>
            <h3 class="service-name">Digital Experience</h3>
            <p class="service-desc">Designing and developing responsive, high-performance websites and applications.</p>
        </div>
        <div class="service-item">
            <span class="service-num">04</span>
            <h3 class="service-name">Communication</h3>
            <p class="service-desc">Strategic messaging, copywriting, and campaign development across all channels.</p>
        </div>
        <div class="service-item">
            <span class="service-num">05</span>
            <h3 class="service-name">Motion & 3D</h3>
            <p class="service-desc">Bringing brands to life through dynamic motion graphics and 3D visualization.</p>
        </div>
    </section>
</MainLayout>
